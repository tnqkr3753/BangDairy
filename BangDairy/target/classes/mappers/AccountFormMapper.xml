<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="AccountFormDAO">
	<select id="selectIdCheck" resultType="String" parameterType="String">
		select * from user_info where user_id like #{user_id}
	</select>
	<insert id="insertUser" parameterType="account">
		insert into user_info(user_name,user_id,user_password,
			user_email,user_gender,user_age
		<if test="userProfile != null">
			,user_profile
		</if>
		<if test="userProfileSize != null">
			,user_profile_size
		</if>
			)
		 values(#{userName},#{userId},#{userPassword},
		#{userEmail},#{userGender},#{userAge}
		<if test="userProfile != null">
		,#{userProfile}
		</if>
		<if test="userProfileSize != null">
		,#{userProfilesize}
		</if>
		)
	</insert>
</mapper>